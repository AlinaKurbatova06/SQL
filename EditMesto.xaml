<Window x:Class="ИС_Военный_округ.EditMesto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ИС_Военный_округ"
        mc:Ignorable="d"
        Title="Редактировать место дислокации" Height="360" Width="200" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <Label Margin="5,10,5,0" Content="Страна:" HorizontalAlignment="Center" />
        <TextBox Margin="5,0,5,10" Name="country" />
        <Label Margin="5,10,5,0" Content="Город:" HorizontalAlignment="Center" />
        <TextBox Margin="5,0,5,10" Name="city" />
        <Label Margin="5,10,5,0" Content="Адрес:" HorizontalAlignment="Center" />
        <TextBox Margin="5,0,5,10" Name="address" />
        <Label Margin="5,10,5,0" Content="Площадь:" HorizontalAlignment="Center" />
        <TextBox Margin="5,0,5,10" Name="square" />
        <Button Margin="5,10,5,10" Content="Сохранить" Click="Button_Click" />
    </StackPanel>
</Window>

