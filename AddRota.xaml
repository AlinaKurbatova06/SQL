<Window x:Class="ИС_Военный_округ.AddRota"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ИС_Военный_округ"
        mc:Ignorable="d"
        Title="Добавить роту" Height="220" Width="200" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <StackPanel>
        <Label Margin="5,10,5,0" Content="Наименование роты:" HorizontalAlignment="Center" />
        <TextBox Margin="5,0,5,10" Name="name" />
        <Label Margin="5,10,5,0" Content="Воинская часть:" HorizontalAlignment="Center" />
        <ComboBox Margin="5,0,5,10" Name="chast" /> 
        <Button Margin="5,10,5,10" Content="Создать" Click="Button_Click" />
    </StackPanel>
</Window>